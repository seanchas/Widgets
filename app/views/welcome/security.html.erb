<%- content_for :chart do -%>
    <div id="chart_container">
    </div>
<%- end -%>

<%- content_for :digest do -%>
    <div id="digest_container">
    </div>
<%- end -%>

<%- content_for :left_column do -%>
    <h2>Параметры инструмента</h2>
    <div id="description_container">
    </div>
<%- end -%>

<%- content_for :right_column do -%>
    <h2>Информация об эмитенте</h2>
    <div id="emitter_container">
    </div>
    
    <h2>Другие инструменты эмитента</h2>
    <div id="others_container">
    </div>
    
    <h2>Режимы торгов</h2>
    <div id="boards_container">
    </div>
    
<%- end -%>

<%- content_for :sidebar do -%>
    <h2>Котировки</h2>
    <div id="orderbook_container">
    </div>
<%- end -%>

<%- content_for :script do -%>

<script type="text/javascript" charset="utf-8">
    
    $(function() {
        
        var widgets = {

            'digest': {
                container: $('#digest_container'),
                options: {}
            },
            
            'chart': {
                container: $('#chart_container'),
                options: {}
            },
            
            'orderbook': {
                container: $('#orderbook_container'),
                options: {}
            },
            
            'description': {
                container: $('#description_container'),
                options: {}
            },

            'emitter': {
                container: $('#emitter_container'),
                options: {}
            },

            'emitter_securities': {
                container: $('#others_container'),
                options: {}
            },

            'boards': {
                container: $('#boards_container'),
                options: {}
            }

        }
        
        var parts = window.location.hash.substr(1).split(":");
        if (_.size(parts) == 4)
            _.each(widgets, function(widget, key) {
                mx.security[key](widget.container, parts[0], parts[1], parts[2], parts[3], widget.options)
            });
        
        
        $(window).on('hashchange', function(e) {
            window.location.reload()
        });
        
    });
    
</script>

<%- end -%>
